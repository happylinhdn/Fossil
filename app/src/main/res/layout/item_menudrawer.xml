<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSideBar"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/item_menu_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_centerInParent="false"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                app:srcCompat="@drawable/ic_home" />

            <TextView
                android:id="@+id/item_menu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_centerInParent="false"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/item_menu_icon"
                android:paddingLeft="20dp"
                android:text="Home"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/colorBlackText" />

            <TextView
                android:id="@+id/item_menu_bagde"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/item_menu_title"
                android:background="@drawable/dot_shape"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/colorWhiteText"
                android:textSize="10sp"
                android:visibility="invisible" />

        </RelativeLayout>

        <Button
            android:id="@+id/item_menudrawer_title"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_home"
            android:drawablePadding="20dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/left_margin_drawer"
            android:text="Home"
            android:textAllCaps="false"
            android:textColor="@color/colorBlackText"
            android:textSize="14sp"
            android:visibility="gone" />
        <View
            android:id="@+id/item_menudrawer_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorYellowDark" />
    </LinearLayout>